<body>
    <div class="container-tarefas">
        <h1><%= titulo %></h1>
        <form class="nova-tarefa" action="/tasks/add" method="POST">
            <input type="text" name="title" placeholder="Nova tarefa" required pattern=".*@.*" title="O usu√°rio deve ser um e-mail (conter @)">
            <button type="submit">Adicionar</button>
        </form>
        <button type="button" style="margin-top:18px; background:#fff; color:#2575fc; border:1.5px solid #2575fc; box-shadow:none;" onclick="toggleRegister()">Registrar novo usu√°rio</button>
        <form id="register-box" action="/register" method="POST" style="display:none; flex-direction:column; gap:16px; margin-top:18px; width:100%; animation: fadeIn 0.4s;">
            <input type="text" name="nome" placeholder="Nome completo" required>
            <input type="tel" name="telefone" placeholder="Telefone" required pattern="[0-9]{10,11}" title="Digite apenas n√∫meros, com DDD">
            <input type="email" name="email" placeholder="E-mail" required>
            <select name="cargo" required>
                <option value="">Selecione o cargo</option>
                <option value="gerente">Gerente</option>
                <option value="coordenador">Coordenador</option>
                <option value="especialista">Especialista</option>
                <option value="tecnico">T√©cnico</option>
            </select>
            <input type="password" name="new_password" placeholder="Senha" required>
            <button type="submit">Registrar</button>
        </form>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <span class="<%= task.done ? 'done' : '' %>" style="flex:1;"><%= task.title %></span>
                    <% if (!task.done) { %>
                        <form action="/tasks/done/<%= task.id %>" method="POST">
                            <button type="submit" title="Concluir"><span>‚úÖ</span>Concluir</button>
                        </form>
                    <% } %>
                    <form action="/tasks/delete/<%= task.id %>" method="POST">
                        <button type="submit" title="Excluir"><span>üóëÔ∏è</span>Excluir</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <div class="container-inicial">
        <h1>Bem-vindo ao Task Manager</h1>
        <p>Gerencie suas tarefas de forma simples e eficiente.</p>
        <button id="btn-register" onclick="document.getElementById('register-modal').style.display='block'">Registre-se</button>
    </div>
    <!-- Modal de registro -->
    <div id="register-modal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:#0008; align-items:center; justify-content:center;">
        <form action="/register" method="POST" style="background:#fff; padding:32px 24px; border-radius:12px; min-width:280px; max-width:90vw; margin:auto; display:flex; flex-direction:column; gap:16px;">
            <h2 style="margin-bottom:12px; color:#2575fc;">Registrar Usu√°rio</h2>
            <input type="text" name="name" placeholder="Nome" required style="padding:10px; border-radius:6px; border:1px solid #ccc;">
            <input type="email" name="email" placeholder="E-mail" required style="padding:10px; border-radius:6px; border:1px solid #ccc;">
            <input type="password" name="password" placeholder="Senha" required style="padding:10px; border-radius:6px; border:1px solid #ccc;">
            <div style="display:flex; gap:8px; justify-content:flex-end;">
                <button type="button" onclick="document.getElementById('register-modal').style.display='none'" style="background:#eee; color:#333;">Cancelar</button>
                <button type="submit" style="background:#2575fc; color:#fff;">Registrar</button>
            </div>
        </form>
    </div>
    <script>
        // Fecha o modal ao clicar fora do formul√°rio
        document.addEventListener('click', function(e) {
            const modal = document.getElementById('register-modal');
            if (modal && e.target === modal) modal.style.display = 'none';
        });
    </script>
